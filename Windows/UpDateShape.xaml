<Window x:Class="Kontrol.Windows.UpDateShape"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kontrol.Windows"
        mc:Ignorable="d"
        Title="UpDateShape" Height="470" Width="800">
    <Grid>
        <Label Content="Articl" HorizontalAlignment="Left" Margin="30,10,0,0" VerticalAlignment="Top"/>
        <TextBox Name="ArticlBox" HorizontalAlignment="Left" Margin="30,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="ShortDescription" HorizontalAlignment="Left" Margin="30,64,0,0" VerticalAlignment="Top"/>
        <TextBox Name="ShortDescriptionBox" HorizontalAlignment="Left" Margin="30,95,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Type" HorizontalAlignment="Left" Margin="30,116,0,0" VerticalAlignment="Top"/>
        <TextBox Name="TypeBox" HorizontalAlignment="Left" Margin="30,147,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox Name="DescriptonBox" HorizontalAlignment="Left" Margin="30,201,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="370" Height="37"/>
        <Label Content="Description" HorizontalAlignment="Left" Margin="30,170,0,0" VerticalAlignment="Top"/>
        <Button Name="UpdateButton" Content="Update" HorizontalAlignment="Left" Margin="30,374,0,0" VerticalAlignment="Top" Width="121" Height="38" Click="UpdateButton_Click"/>
        <Label Content="Status" HorizontalAlignment="Left" Margin="30,243,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="StatusBox" ItemsSource="{Binding StatusesList}" SelectedItem="{Binding Statuses}" HorizontalAlignment="Left" Margin="30,274,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="User" HorizontalAlignment="Left" Margin="32,301,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="UserBox" ItemsSource="{Binding UserList}" SelectedItem="{Binding Users}" HorizontalAlignment="Left" Margin="32,332,0,0" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
