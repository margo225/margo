<Window x:Class="WpfApp2.Windows.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2.Windows"
        mc:Ignorable="d"
        Title="RegistrationWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Login" HorizontalAlignment="Left" Margin="25,10,0,0" VerticalAlignment="Top"/>
        <TextBox Name="LoginBox" HorizontalAlignment="Left" Margin="164,18,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="25,55,0,0" VerticalAlignment="Top"/>
        <TextBox Name="PasswordBox" HorizontalAlignment="Left" Margin="164,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="FIO" HorizontalAlignment="Left" Margin="36,102,0,0" VerticalAlignment="Top"/>
        <TextBox Name="FIOBox" HorizontalAlignment="Left" Margin="164,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="501"/>
        <Label Content="Phone" HorizontalAlignment="Left" Margin="36,147,0,0" VerticalAlignment="Top"/>
        <TextBox Name="PhoneBox" HorizontalAlignment="Left" Margin="164,142,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Name="RegistrationButton" Content="Registration" HorizontalAlignment="Left" Margin="25,241,0,0" VerticalAlignment="Top" Width="204" Click="RegistrationButton_Click"/>
        <Button Name="LogInButton" Content="LogIn" HorizontalAlignment="Left" Margin="502,344,0,0" VerticalAlignment="Top" Width="163" Click="LogInButton_Click"/>

    </Grid>
</Window>
