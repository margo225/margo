<Window x:Class="V2.Forms.LogInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:V2.Forms"
        mc:Ignorable="d"
        Title="LogInWindow" Height="450" Width="500">
    <Grid>
        <TextBox Name="LoginBox" HorizontalAlignment="Left" Margin="123,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Login" HorizontalAlignment="Left" Margin="123,43,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="123,125,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.124,0.518"/>
        <Button Name="LogInButton" Content="LogIn" HorizontalAlignment="Left" Margin="123,237,0,0" VerticalAlignment="Top" Width="127" Click="LogInButton_Click"/>
        <Button Name="RegistrationButton" Content="Registration" HorizontalAlignment="Left" Margin="320,370,0,0" VerticalAlignment="Top" Width="127" Click="RegistrationButton_Click"/>
        <PasswordBox Name="PasswordBox"  HorizontalAlignment="Left" Margin="123,156,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
