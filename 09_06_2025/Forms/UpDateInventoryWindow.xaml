<Window x:Class="V2.Forms.UpDateInventoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:V2.Forms"
        mc:Ignorable="d"
        Title="UpDateInventoryWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Artikl" HorizontalAlignment="Left" Margin="37,10,0,0" VerticalAlignment="Top"/>
        <TextBox Name="ArtiklBox" HorizontalAlignment="Left" Margin="37,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Name" HorizontalAlignment="Left" Margin="37,74,0,0" VerticalAlignment="Top"/>
        <TextBox Name="NameBox"  HorizontalAlignment="Left" Margin="37,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Type" HorizontalAlignment="Left" Margin="40,140,0,0" VerticalAlignment="Top"/>
        <TextBox Name ="TypeBox"  HorizontalAlignment="Left" Margin="37,171,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Name="UpdateButton" Content="Update" HorizontalAlignment="Left" Margin="400,305,0,0" VerticalAlignment="Top" Width="181" Height="38" Click="UpdateButton_Click"/>
        <Label Content="Description" HorizontalAlignment="Left" Margin="490,18,0,0" VerticalAlignment="Top"/>
        <TextBox Name ="DescriptionBox"  HorizontalAlignment="Left" Margin="463,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Height="167"/>
        <DatePicker Name="DatePicker" HorizontalAlignment="Left" Margin="238,54,0,0" VerticalAlignment="Top" Width="162"/>
        <Label Content="Дата изготовления" HorizontalAlignment="Left" Margin="238,23,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="StatusBox" ItemsSource="{Binding Statuses}" SelectedItem="{Binding status}" HorizontalAlignment="Left" Margin="238,131,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Status" HorizontalAlignment="Left" Margin="238,96,0,0" VerticalAlignment="Top"/>
        <Label Content="User" HorizontalAlignment="Left" Margin="238,180,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="UserBox" ItemsSource="{Binding Users}" SelectedItem="{Binding user}" HorizontalAlignment="Left" Margin="238,217,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
