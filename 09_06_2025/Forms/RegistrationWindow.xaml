<Window x:Class="V2.Forms.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:V2.Forms"
        mc:Ignorable="d"
        Title="RegistrationWindow" Height="450" Width="800">
    <Grid>
        <TextBox Name="LoginBox" HorizontalAlignment="Left" Margin="123,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Login" HorizontalAlignment="Left" Margin="123,47,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="123,125,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.124,0.518"/>
        <TextBox Name="PasswordBox" HorizontalAlignment="Left" Margin="123,156,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Name="RegistrationButton" Content="Registration" HorizontalAlignment="Left" Margin="123,237,0,0" VerticalAlignment="Top" Width="127" Click="RegistrationButton_Click"/>
        <Button Name="LogInButton" Content="LogIn" HorizontalAlignment="Left" Margin="600,370,0,0" VerticalAlignment="Top" Width="127" Click="LogInButton_Click"/>
        <Label Content="Фамилия" HorizontalAlignment="Left" Margin="310,47,0,0" VerticalAlignment="Top"/>
        <TextBox Name="FBox" HorizontalAlignment="Left" Margin="310,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Имя" HorizontalAlignment="Left" Margin="310,125,0,0" VerticalAlignment="Top"/>
        <TextBox Name="IBox" HorizontalAlignment="Left" Margin="310,156,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Label Content="Отчество" HorizontalAlignment="Left" Margin="513,47,0,0" VerticalAlignment="Top"/>
        <TextBox Name="OBox" HorizontalAlignment="Left" Margin="513,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="PhoneNumber" HorizontalAlignment="Left" Margin="513,133,0,0" VerticalAlignment="Top"/>
        <TextBox Name="PhoneNumberBox" HorizontalAlignment="Left" Margin="513,156,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
