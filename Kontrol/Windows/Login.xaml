<Window x:Class="Kontrol.Windows.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kontrol.Windows"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="400">
    <Grid>
        <TextBox Name="LoginBox"  HorizontalAlignment="Left" Margin="116,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="PasswordBox" HorizontalAlignment="Left" Margin="116,159,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Login" HorizontalAlignment="Left" Margin="116,55,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.233,0.431"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="116,128,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.211,0.314"/>
        <Button Name="ButtonIn" Content="Вход" HorizontalAlignment="Left" Margin="116,217,0,0" VerticalAlignment="Top" Width="120" Height="27" Click="ButtonIn_Click"/>
        <Button Name="ButtonRegistraion"  Content="Регистрация" HorizontalAlignment="Left" Margin="222,370,0,0" VerticalAlignment="Top" Width="147" Click="ButtonRegistraion_Click"/>

    </Grid>
</Window>
