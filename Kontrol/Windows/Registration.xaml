        <Button Name="RegistrationButon" Content="Зарегистрироваться" HorizontalAlignment="Left" Margin="30,358,0,0" VerticalAlignment="Top" Width="120" Click="RegistrationButon_Click"/>
        <Button Name="InButton" Content="Вход" HorizontalAlignment="Left" Margin="268,429,0,0" VerticalAlignment="Top" Width="91" Click="InButton_Click"/>

